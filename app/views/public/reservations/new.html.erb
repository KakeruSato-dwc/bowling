<div class="container">
  <div class="row">
    <div class="col-4 mt-3">
      <h2 class="bg-light text-center">予約情報入力</h2>
      <% if @reservation.errors.any? %>
        <h4><%= @reservation.errors.count %>件のエラーが発生しました</h4>
        <ul>
          <% @reservation.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>

  <%= form_with model: @reservation, url: select_time_path, method: :post do |f| %>
  <div class="row mt-4">
    <div class="col-1"></div>
    <div class="col-4 text-center h4">団体名</div>
    <div class="col-5 text-center"><%= f.text_field :group_name, class: "w-100" %></div>
  </div>

  <div class="row mt-3">
    <div class="col-1"></div>
    <div class="col-4 text-center h4 my-auto">人数</div>
    <div class="col-2 text-center">中学生以下<%= f.text_field :num_children, class: "w-100" %></div>
    <div class="col-2 text-center">高校・大学・専門学生<%= f.text_field :num_students, class: "w-100" %></div>
    <div class="col-2 text-center">一般<%= f.text_field :num_adults, class: "w-100" %></div>
    <div class="col-1 mt-auto">人</div>
  </div>

  <div class="row mt-4">
    <div class="col-1"></div>
    <div class="col-4 text-center h4">ゲーム数</div>
    <div class="col-5 text-center my-auto"><%= f.select :num_games, *[1..5] %></div>
  </div>

  <div class="row mt-4">
    <div class="col-1"></div>
    <div class="col-4 text-center">
      <h4>レーン数</h4>
      <p>※ 1レーンあたりの人数は2~6人にしてください</p>
    </div>
    <div class="col-5 text-center my-auto"><%= f.select :num_lanes, *[1..24] %></div>
  </div>

  <div class="row mt-4">
    <div class="col-1"></div>
    <div class="col-4 text-center">
      <h4>実施日</h4>
    </div>
    <div class="col-5 text-center my-auto"><%= f.date_field :start_date, min: Date.current.since(1.day), max: Date.current.since(3.month) %></div>
  </div>

  <div class="row mt-4">
    <div class="col-8 mx-auto text-center">
      <%= f.submit "次に進む", class: "btn btn-success" %>
    </div>
  </div>

  <% end %>

</div>
